{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "rules": {
    "class-methods-use-this": 0,
    "semi": 0,
    "comma-dangle": 1,
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-space-before-closing": 2,
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "react/prop-types": 0,
    "strict": 0,
    "max-len": 0
  }
}
